{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "types": ["node", "jest"],

    "baseUrl": "..",
    "rootDir": "..",

    "paths": {
      "@/*": ["src/*"],
      "@common/*": ["src/common/*"],
      "@config/*": ["src/config/*"],
      "@integrations/*": ["src/integrations/*"],
      "@modules/*": ["src/modules/*"]
    }
  },
  "include": ["../src/**/*.ts", "./**/*.ts"],
  "exclude": ["../dist", "../node_modules"]
}